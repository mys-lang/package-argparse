@test
def test_is_present():
    parser = Parser("bar")
    parser.add_option("--foo")

    args = parser.parse(["bar", "--foo"])
    assert args.is_present("--foo")

    args = parser.parse(["bar"])
    assert not args.is_present("--foo")

