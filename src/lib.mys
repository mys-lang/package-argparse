    parser = Parser("bar")
    cat = parser.add_subcommand("cat")
    cat.add_option("--foo")

    args = parser.parse(["bar", "cat", "--", "apa", "--foo"])

    assert args.remaining == ["apa", "--foo"]

    name, args = args.subcommand()
    assert name == "cat"
    assert args.remaining == []

